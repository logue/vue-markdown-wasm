{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-markdown-wasm",
  "description": "markdown-wasm for vue 2 & 3",
  "keywords": [
    "vuejs",
    "vue",
    "vue-components",
    "vue-markdown",
    "markdown",
    "markdown-parser",
    "markdown-wasm",
    "vue2",
    "vue3",
    "vue-plugin",
    "vue-component",
    "vue-resource"
  ],
  "version": "0.3.13",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-markdown-wasm",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-markdown-wasm.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-markdown-wasm/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "jsdelivr": "dist/index.iife.js",
  "unpkg": "dist/index.iife.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "jsdelivr": "./dist/index.iife.js",
      "unpkg": "./dist/index.iife.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist",
    "./src/components/VueMarkdown.ts"
  ],
  "browser": {
    "./sfc": "./src/components/VueMarkdown.ts"
  },
  "engines": {
    "yarn": ">=1.22.19"
  },
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite",
    "type-check": "tsc --noEmit --composite false",
    "build": "run-p type-check build-only",
    "build:analyze": "vite build --mode=analyze",
    "build:clean": "rimraf dist docs",
    "build:docs": "vite build --mode=docs",
    "build-only": "vite build",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "preview": "vite preview --mode=docs",
    "prepare": "husky install",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "@logue/markdown-wasm": "^1.4.13",
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@logue/markdown-wasm": "^1.4.13",
    "@vue/composition-api": "^1.7.2",
    "vue": "^2.6.14 || ^3.2.39"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "^6.2.3",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/emscripten": "^1.39.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/tsconfig": "^0.4.0",
    "@vueuse/core": "^10.6.1",
    "codemirror": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "^9.18.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.9.3",
    "sass": "^1.69.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.3",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-checker": "0.6.2",
    "vite-plugin-dts": "^3.6.3",
    "vue": "3.3.9",
    "vue-codemirror6": "^1.1.30",
    "vue-eslint-parser": "^9.3.2",
    "vue-tsc": "^1.8.22"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "http-cache-semantics": "^4.1.1",
    "json5": "^2.2.3",
    "semver": "^7.5.2",
    "tough-cookie": "^4.1.3",
    "vite": "^4.3.9",
    "word-wrap": "^1.2.4",
    "yaml": "^2.3.2"
  }
}
