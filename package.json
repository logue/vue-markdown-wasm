{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-markdown-wasm",
  "description": "markdown-wasm for vue 2 & 3",
  "version": "0.1.1",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-markdown-wasm",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-markdown-wasm.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-markdown-wasm/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist",
    "./src/components/VueMarkdown.ts"
  ],
  "browser": {
    "./sfc": "./src/components/VueMarkdown.ts"
  },
  "engines": {
    "node": ">=18.12.1",
    "yarn": ">=1.22.19"
  },
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite",
    "type-check": "tsc --noEmit --composite false",
    "build": "run-p type-check build-only build-declaration",
    "build:analyze": "vite build --mode=analyze",
    "build:clean": "rimraf dist docs",
    "build:docs": "vite build --mode=docs",
    "build-only": "vite build",
    "build-declaration": "tsc -p tsconfig.app.json --composite false --declaration --declarationMap --declarationDir dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "preview": "vite preview --mode=docs",
    "prepare": "husky install",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "markdown-wasm": "1.2.0",
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.1",
    "vue": "^2.6.14 || ^3.2.39"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "^6.0.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/core": "^9.10.0",
    "codemirror": "^6.0.1",
    "eslint": "^8.31.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-banner": "^0.7.0",
    "vite-plugin-checker": "0.5.3",
    "vue": "^3.2.45",
    "vue-codemirror6": "^1.1.2",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.0.22"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "prettier": "^2.8.1"
  },
  "stackblitz": {
    "startCommand": "yarn run test"
  }
}
