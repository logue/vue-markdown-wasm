{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-markdown-wasm",
  "description": "markdown-wasm for vue 2 & 3",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "vue",
    "vue-markdown",
    "markdown",
    "markdown-wasm",
    "vue2",
    "vue3",
    "vue-component"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-markdown-wasm",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-markdown-wasm.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-markdown-wasm/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "unpkg": "dist/index.iife.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./umd": {
      "default": "./dist/index.umd.js"
    },
    "./iife": {
      "default": "./dist/index.iife.js"
    }
  },
  "files": [
    "/dist",
    "./src/components/VueMarkdown.ts"
  ],
  "sideEffects": false,
  "browser": {
    "./sfc": "./src/components/VueMarkdown.ts"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.3.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:analyze": "vite build --mode=analyze",
    "build:clean": "rimraf dist docs",
    "build:docs": "vite build --mode=docs",
    "lint": "eslint --fix --cache && prettier . --write",
    "preview": "vite preview --mode=docs",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "prepare": "husky install",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@logue/markdown-wasm": "^1.4.15",
    "@vue/composition-api": "^1.7.2",
    "vue": "^2.6.14 || ^3.2.39"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "6.4.0",
    "@eslint/js": "^9.38.0",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/emscripten": "^1.41.4",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^13.9.0",
    "eslint": "^9.38.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-linter-browserify": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-vue": "^10.5.1",
    "github-markdown-css": "^5.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.11",
    "vite-plugin-banner": "^0.8.1",
    "vite-plugin-checker": "0.11.0",
    "vite-plugin-dts": "^4.5.4",
    "vue": "3.5.22",
    "vue-codemirror6": "1.4.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,vue,htm,html,md}": "eslint --fix --cache",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "json5": ">=2.2.3",
    "yaml": ">=2.3.2"
  }
}